<div class="ui secondary pointing menu" id="menu">
    <a class="active item home" href="/">
        <i class="home icon"></i>Home
    </a>

    <a class="item projects" href="/projects">
        <i class="rocket icon"></i>Projects
    </a>

    <a class="item blog" href="/blog">
        <i class="comments icon"></i>Blog
    </a>
</div>

<script type="text/javascript">  
    var menuItem = $('.ui.secondary.pointing.menu .item');
    var path = window.location.pathname;
    var pageLoaded = path.substring(path.lastIndexOf('/') + 1);
    var activePage;

    switch(pageLoaded){
        case "blog": activePage = $('.ui.secondary.pointing.menu .item.blog'); break;
        case "projects": activePage = $('.ui.secondary.pointing.menu .item.projects'); break;
        default: activePage = $('.ui.secondary.pointing.menu .item.home'); break;
    }

    activePage.addClass('active').closest('.ui.secondary.pointing.menu').find('.item').not(activePage).removeClass('active'); 
</script>