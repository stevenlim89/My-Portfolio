<script type="text/javascript">
    $(document).ready(function(){
        //$('#iconHead').transition({
          //  animation: 'fade left',
           // duration: 1000,
           // interval: 200
        //});

        // Need to extract to partial
        var menuItem = $('.ui.secondary.pointing.menu .item');

        handler = {
            activate: function(){
                if(!$(this).hasClass('active')){
                    $(this).addClass('active').closest('.ui.secondary.pointing.menu').find('.item').not($(this)).removeClass('active');
                }
            }
        }

        menuItem.on('click', handler.activate);

        // end of extraction to partial

        setInterval(carousel(), '10000');


        setInterval(function () { carousel() }, 7000);

        function carousel() {
            var imageList = document.getElementById('imageList');
            var pictures = imageList.getElementsByTagName('img');
        
            var next = pictures[0];

            for (var i = 0; i < pictures.length; i++) {
                if (!$(pictures[i]).hasClass("noDisplay")) {
                    
                    if (i == pictures.length - 1) {
                        next = pictures[0];
                    } else {
                        next = pictures[i].nextElementSibling;
                    }
                    
                    $(next).removeClass('noDisplay');
                    $(next).transition({
                        animation: 'fade',
                        duration: '2s',
                        hidden: 'hidden',
                        displayType: 'block'
                    });
                    
                    pictures[i].className = 'noDisplay';
                    //$(pictures[i]).addClass('noDisplay');
                    pictures[i].style.display = 'none';

                    break;
                }
            }
        }
    });
</script>
