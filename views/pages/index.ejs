<script type="text/javascript">
    $('#menu, #menu .item').css("color", "white");
    $('#menu, #menu .item').css("border-bottom-color", "#00BEBE");
    $('.ui.secondary.pointing.menu .active').attr("style", "border-color: white !important; color: white !important");

    $('.homeButtons')
          .popup({
              hoverable: true
    });

    var flip = document.getElementById('wordFlip');
    var counter = 0;
    var textArray = ["Developer", "Techy", "Entrepeneur", "Nerd", "Problem Solver", "Student"];

    setInterval(function () { changeWord() }, 3000);

    function changeWord(){
        $('#wordFlip').transition({
            animation: 'fade in',
            duration: '2s',
        });

        flip.innerHTML = textArray[counter];
        counter++;
        
        if(counter > textArray.length - 1){
            counter = 0;
        }
    }

    
</script>
